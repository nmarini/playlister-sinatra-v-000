<h1>Artist's Page:</h1>

<h2>List of <%=@artist.name%>'s Songs:</h2>

<% @artist.songs.each.with_index(1) do |song, index|%>
  <p> <%=index%>. <a href="/songs/<%= song.slug %>"><%= song.name %> </a><br>
    Genres: <br>
    <%song.genres.each.with_index(1) do |genre, index|%>
      <p><%= index %>. <a href="/genres/<%= genre.slug %>"><%= genre.name %></a>
      </p>
      <%end%>
  </p>
<% end >
